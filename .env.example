# HablaAI Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Anthropic API key (required)
ANTHROPIC_API_KEY=your_api_key_here

# Model to use (optional, defaults shown)
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.7

# =============================================================================
# Database
# =============================================================================

# SQLite database path
DATABASE_URL=sqlite:///data/habla.db

# =============================================================================
# Application
# =============================================================================

# Debug mode (enables detailed error pages, auto-reload)
DEBUG=true

# Server settings
HOST=127.0.0.1
PORT=8000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable voice input (V2 feature)
ENABLE_VOICE_INPUT=false

# Enable spaced repetition (V2 feature)
ENABLE_SPACED_REPETITION=false
