# HablaAI Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Configuration
# =============================================================================

# Anthropic API key (required)
ANTHROPIC_API_KEY=your_api_key_here

# Model to use (optional, defaults shown)
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.7

# =============================================================================
# Supabase (required for auth and persistence)
# =============================================================================

# Get these from your Supabase project: Settings > API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Database connection string from: Settings > Database > Connection string > URI
SUPABASE_DB_URL=postgresql://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres

# Optional: Service key for admin operations (bypasses RLS)
# SUPABASE_SERVICE_KEY=your-service-key-here

# =============================================================================
# Application
# =============================================================================

# Debug mode (enables detailed error pages, auto-reload)
DEBUG=true

# Server settings
HOST=127.0.0.1
PORT=8000

# =============================================================================
# Feature Flags
# =============================================================================

# Enable voice input (V2 feature)
ENABLE_VOICE_INPUT=false

# Enable spaced repetition (V2 feature)
ENABLE_SPACED_REPETITION=false
